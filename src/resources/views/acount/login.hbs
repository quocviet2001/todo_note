<div class="container mt-5 w-60">
    {{#if mess}}
    <div class="alert alert-success">{{mess}}</div>
    {{/if}}
    <h2>Đăng Nhập</h2>
    {{#if wrong}}
    <div class="alert alert-danger">{{wrong}}</div>
    {{/if}}
    <form action="/auth/login" method="POST">
        <div class="form-group">
            <label for="email">Email</label>
            <input type="email" class="form-control" value="{{formData.email}}" id="email" name="email" placeholder="Nhập email" required>
        </div>
        <div class="form-group">
            <label for="password">Mật Khẩu</label>
            <input type="password" class="form-control" value="{{formData.password}}" id="password" name="password" placeholder="Nhập mật khẩu"
                required>
        </div>
        <button type="submit" class="btn btn-primary">Đăng Nhập</button>
    </form>
    <p class="mt-3">Chưa có tài khoản? <a href="/sign-up">Đăng Ký</a></p>
</div>